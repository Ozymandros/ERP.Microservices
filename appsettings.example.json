{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "MyApp": "Information",
      "MyApp.Orders": "Debug",
      "MyApp.Inventory": "Information",
      "MyApp.Purchasing": "Information",
      "MyApp.Sales": "Information",
      "MyApp.Billing": "Information",
      "MyApp.Notification": "Information",
      "MyApp.Auth": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Sinks": {
      "Console": {
        "Enabled": true,
        "Format": "compact",
        "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
      },
      "File": {
        "Enabled": true,
        "Path": "logs/app-.log",
        "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
        "RetainedFileCountLimit": 30,
        "RollOnFileSizeLimit": false,
        "FileSizeLimit": null,
        "IsAsync": true
      },
      "ApplicationInsights": {
        "Enabled": false,
        "InstrumentationKey": null
      }
    }
  },
  "ConnectionStrings": {
    "ordersdb": "Server=localhost;Database=OrdersDb;User Id=sa;Password=YourPassword123!;Encrypt=false;",
    "inventorydb": "Server=localhost;Database=InventoryDb;User Id=sa;Password=YourPassword123!;Encrypt=false;",
    "purchasingdb": "Server=localhost;Database=PurchasingDb;User Id=sa;Password=YourPassword123!;Encrypt=false;",
    "salesdb": "Server=localhost;Database=SalesDb;User Id=sa;Password=YourPassword123!;Encrypt=false;",
    "billingdb": "Server=localhost;Database=BillingDb;User Id=sa;Password=YourPassword123!;Encrypt=false;",
    "notificationdb": "Server=localhost;Database=NotificationDb;User Id=sa;Password=YourPassword123!;Encrypt=false;",
    "authdb": "Server=localhost;Database=AuthDb;User Id=sa;Password=YourPassword123!;Encrypt=false;"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "your-secret-key-minimum-256-bits-long-for-production-use-a-secure-key-generator",
    "Issuer": "MyApp.Auth",
    "Audience": "MyApp.API",
    "ExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  }
}
